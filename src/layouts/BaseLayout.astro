---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;

// SEO metadata
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const defaultDescription =
  "Agentic Software Development Life Cycle - A knowledge base for AI-augmented software engineering.";
const metaDescription = description || defaultDescription;
const ogImage = image || new URL("/og-default.svg", Astro.site).toString();
const pageTitle = `${title} | ASDLC.io`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Metadata -->
    <title>{pageTitle}</title>
    <meta name="description" content={metaDescription} />
    <meta name="author" content="ASDLC.io Contributors" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="ASDLC.io" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={ogImage} />
  </head>
  <body>
    <header class="border-box" style="margin-bottom: var(--s-gap);">
      <nav style="display: flex; gap: 2rem; align-items: center;">
        <a href="/" style="font-weight: 600; text-decoration: none;">ASDLC</a>
        <a href="/concepts">Concepts</a>
        <a href="/patterns">Patterns</a>
      </nav>
    </header>
    <main class="grid-layout">
      <slot />
    </main>
    <footer class="border-box" style="margin-top: var(--s-gap); text-align: center; font-family: var(--f-mono); font-size: 0.875rem; color: var(--c-dim);">
      <p>ASDLC.io Â© {new Date().getFullYear()} | Licensed under <a href="https://opensource.org/licenses/MIT" target="_blank" rel="noopener">MIT License</a></p>
    </footer>
  </body>
</html>
