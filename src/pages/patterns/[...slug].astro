---
import type { CollectionEntry } from "astro:content";
import { getCollection, render } from "astro:content";
import StructuredData from "../../components/StructuredData.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const patterns = await getCollection("patterns");
  return patterns.map((pattern) => ({
    params: { slug: pattern.id },
    props: { pattern },
  }));
}

interface Props {
  pattern: CollectionEntry<"patterns">;
}

const { pattern } = Astro.props;
const { Content } = await render(pattern);

// Generate canonical URL for structured data
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Prepare structured data for Schema.org TechArticle
const structuredDataProps = {
  title: pattern.data.title,
  description: `Architectural pattern: ${pattern.data.title}`,
  datePublished: pattern.data.publishDate.toISOString(),
  complexity: pattern.data.complexity,
  url: canonicalURL.toString(),
};
---

<StructuredData type="TechArticle" data={structuredDataProps} />

<BaseLayout title={pattern.data.title} description={`Architectural pattern: ${pattern.data.title}`}>
  <article class="pattern-detail">
    <header class="spec-header border-box content">
      <h1>{pattern.data.title}</h1>
      <dl class="spec-meta mono">
        <div>
          <dt>Complexity:</dt>
          <dd class="spec-badge">{pattern.data.complexity}</dd>
        </div>
        <div>
          <dt>Status:</dt>
          <dd class="spec-badge">{pattern.data.status}</dd>
        </div>
        <div>
          <dt>Published:</dt>
          <dd><time datetime={pattern.data.publishDate.toISOString()}>{pattern.data.publishDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time></dd>
        </div>
        {pattern.data.diagram_source && (
          <div>
            <dt>Diagram:</dt>
            <dd><a href={pattern.data.diagram_source} target="_blank" rel="noopener noreferrer">View Source</a></dd>
          </div>
        )}
      </dl>
    </header>

    <div class="prose content-prose">
      <Content />
    </div>
  </article>
</BaseLayout>


