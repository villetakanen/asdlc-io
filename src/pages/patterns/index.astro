---
import { getCollection } from "astro:content";
import { Content as Definition } from "../../components/definitions/patterns.md";
import SpecCardList from "../../components/SpecCardList.astro";
import CollectionIndex from "../../layouts/CollectionIndex.astro";
import { sortItemsByStatusAndDate } from "../../utils/content";

const patterns = await getCollection("patterns");
const sortedPatterns = sortItemsByStatusAndDate(patterns);
---

<CollectionIndex
  title="Patterns"
  description="Discover proven architectural patterns and solutions for common challenges in agent-driven software development."
  heading="Architectural Patterns"
>
  <Definition slot="definition" />

  <SpecCardList items={sortedPatterns} collection="patterns" />
</CollectionIndex>
