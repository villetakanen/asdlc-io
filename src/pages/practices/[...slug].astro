---
import type { CollectionEntry } from "astro:content";
import { getCollection, render } from "astro:content";
import SpecHeader from "../../components/SpecHeader.astro";
import StructuredData from "../../components/StructuredData.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const practices = await getCollection("practices");
  return practices.map((practice) => ({
    params: { slug: practice.id },
    props: { practice },
  }));
}

interface Props {
  practice: CollectionEntry<"practices">;
}

const { practice } = Astro.props;
const { Content } = await render(practice);

// Generate canonical URL for structured data
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Prepare structured data for Schema.org TechArticle
const structuredDataProps = {
  title: practice.data.title,
  description: practice.data.description,
  keywords: practice.data.tags ? practice.data.tags.join(", ") : "",
  dateModified: practice.data.lastUpdated.toISOString(),
  url: canonicalURL.toString(),
};
---

<StructuredData type="TechArticle" data={structuredDataProps} />

<BaseLayout title={practice.data.title} description={practice.data.description}>
  <article class="practice-detail">
    <SpecHeader
      data={practice.data}
    />

    <div class="prose content-prose">
      <Content />
    </div>
  </article>
</BaseLayout>
