---
import { getCollection, render } from "astro:content";
import "../../styles/index.css";
import SEOMetadata from "../../components/SEOMetadata.astro";

// Fetch all collections
const concepts = await getCollection("concepts");
const patterns = await getCollection("patterns");
const practices = await getCollection("practices");

// Alphabetical sort descending from title
const sortAlpha = (a: any, b: any) => a.data.title.localeCompare(b.data.title);

const sortedConcepts = concepts.sort(sortAlpha);
const sortedPatterns = patterns.sort(sortAlpha);
const sortedPractices = practices.sort(sortAlpha);

const today = new Date().toISOString().split("T")[0];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <SEOMetadata
      title="Article Compendium"
      description="Alphabetically-sorted compilation of all ASDLC articles for bulk download and scraping."
      type="article"
    />
    <style>
        /* Print-specific overrides */
        @media print {
            @page {
                margin: 2cm;
            }

            body {
                border-top: none !important;
                background-color: white !important;
                color: black !important;
            }

            .site-header, footer, .no-print {
                display: none !important;
            }

            .chapter {
                break-before: page;
            }

            .section-header {
                break-before: page;
                break-after: avoid;
            }

            a {
                text-decoration: none !important;
                color: black !important;
            }

            * {
                -webkit-print-color-adjust: exact !important;
                print-color-adjust: exact !important;
            }
        }

        /* Screen styles (Reusing Field Manual styles) */
        body {
            max-width: 900px;
            margin: 0 auto;
            padding: 2rem;
            background-color: var(--c-bg-page);
        }

        .cover-page {
            height: 80vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            border-bottom: 2px solid var(--c-text-primary);
            margin-bottom: 4rem;
        }

        .cover-title {
            font-size: 4rem;
            font-weight: 800;
            line-height: 1;
            margin-bottom: 1rem;
            font-family: var(--f-sans);
            text-transform: uppercase;
            letter-spacing: -0.02em;
        }

        .cover-subtitle {
             font-size: 1.5rem;
             font-family: var(--f-sans);
             margin-bottom: 1rem;
             color: var(--c-text-primary);
        }

        .cover-meta {
            font-family: var(--f-mono);
            color: var(--c-text-secondary);
            font-size: 1.25rem;
        }

        .preamble {
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 4rem;
            padding: 2rem;
            background: var(--c-bg-surface);
            border: 1px solid var(--c-border);
            font-family: var(--f-mono);
        }

        .preamble p {
            margin-bottom: 1rem;
        }

        .preamble p:last-child {
            margin-bottom: 0;
        }

        .toc {
            margin-bottom: 4rem;
            padding: 2rem;
            background: var(--c-bg-surface);
            border: 1px solid var(--c-border);
        }

        .toc h2 {
            border-bottom: none;
            margin-top: 0;
        }

        .toc ul {
            list-style: none;
            padding: 0;
        }

        .toc li {
            margin-bottom: 0.5rem;
            font-family: var(--f-mono);
        }

        .toc a {
            text-decoration: none;
            border-bottom: 1px dotted var(--c-text-secondary);
        }

        .section-header {
            font-size: 3rem;
            font-weight: 800;
            text-transform: uppercase;
            color: var(--c-brand);
            border-bottom: 4px solid var(--c-brand);
            margin-top: 4rem;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
        }

        .chapter {
            margin-bottom: 4rem;
            padding-top: 2rem;
            border-top: 1px dashed var(--c-border);
        }

        .chapter-title {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .chapter-meta {
            font-family: var(--f-mono);
            color: var(--c-text-secondary);
            font-size: 0.9rem;
            margin-bottom: 2rem;
            display: block;
        }

        .chapter-description {
            font-size: 1.1rem;
            color: var(--c-text-secondary);
            font-style: italic;
            margin-bottom: 1rem;
            max-width: 80ch;
            line-height: 1.5;
        }

        @media print {
            .chapter-description {
                color: #666 !important;
            }
        }
    </style>
</head>
<body>
    <div class="cover-page">
        <h1 class="cover-title">ASDLC.io<br> Article Compendium</h1>
        <p class="cover-subtitle">Alphabetic Listing for Programmatic Access</p>
        <div class="cover-meta">
            <p>Generated: {today}</p>
        </div>
    </div>

    <div class="preamble">
        <p>
            This is an alphabetically-sorted compilation of all ASDLC articles 
            (Concepts, Patterns, Practices) in a single page. This resource is 
            optimized for bulk download, scraping, or feeding to LLMs for 
            comprehensive analysis.
        </p>
        <p>
            Unlike the <a href="/fieldmanual">Field Manual</a>, which is organized 
            for readability and follows a curated structure, this compendium is 
            intentionally unstructuredâ€”a raw alphabetic listing for programmatic 
            consumption.
        </p>
    </div>

    <!-- Table of Contents -->
    <div class="toc no-print">
        <h2>Table of Contents</h2>
        <h3>Concepts</h3>
        <ul>
            {sortedConcepts.map(entry => (
                <li><a href={`#${entry.id}`}>{entry.data.title}</a></li>
            ))}
        </ul>
        <h3>Patterns</h3>
        <ul>
            {sortedPatterns.map(entry => (
                <li><a href={`#${entry.id}`}>{entry.data.title}</a></li>
            ))}
        </ul>
        <h3>Practices</h3>
        <ul>
            {sortedPractices.map(entry => (
                <li><a href={`#${entry.id}`}>{entry.data.title}</a></li>
            ))}
        </ul>
    </div>

    <!-- Render all collections alphabetically -->
    <h1 class="section-header">Concepts (A-Z)</h1>
    {sortedConcepts.map(async (entry) => {
        const { Content } = await render(entry);
        return (
            <article class="chapter" id={entry.id}>
                <h2 class="chapter-title">{entry.data.title}</h2>
                {entry.data.description && (
                    <p class="chapter-description">{entry.data.description}</p>
                )}
                <span class="chapter-meta">
                    Status: {entry.data.status} |
                    Last Updated: {entry.data.lastUpdated.toISOString().split('T')[0]}
                </span>
                <div class="prose">
                    <Content />
                </div>
            </article>
        );
    })}

    <h1 class="section-header">Patterns (A-Z)</h1>
    {sortedPatterns.map(async (entry) => {
        const { Content } = await render(entry);
        return (
            <article class="chapter" id={entry.id}>
                <h2 class="chapter-title">{entry.data.title}</h2>
                {entry.data.description && (
                    <p class="chapter-description">{entry.data.description}</p>
                )}
                <span class="chapter-meta">
                    Status: {entry.data.status} |
                    Last Updated: {entry.data.lastUpdated.toISOString().split('T')[0]}
                </span>
                <div class="prose">
                    <Content />
                </div>
            </article>
        );
    })}

    <h1 class="section-header">Practices (A-Z)</h1>
    {sortedPractices.map(async (entry) => {
        const { Content } = await render(entry);
        return (
            <article class="chapter" id={entry.id}>
                <h2 class="chapter-title">{entry.data.title}</h2>
                {entry.data.description && (
                    <p class="chapter-description">{entry.data.description}</p>
                )}
                <span class="chapter-meta">
                    Status: {entry.data.status} |
                    Last Updated: {entry.data.lastUpdated.toISOString().split('T')[0]}
                </span>
                <div class="prose">
                    <Content />
                </div>
            </article>
        );
    })}
</body>
</html>
